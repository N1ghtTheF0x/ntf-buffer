{
  "name": "@ntf/buffer",
  "version": "1.2.0",
  "description": "Another buffer library",
  "files": ["dist"],
  "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.cts",
    "exports": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
  "scripts": {
    "test": "tsx --tsconfig tsconfig.test.json test.ts",
    "build:prod": "tsup ./source/index.ts --dts --format esm,cjs",
    "build": "tsup ./source/index.ts --dts --format esm,cjs --sourcemap",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/N1ghtTheF0x/ntf-buffer.git"
  },
  "keywords": [
    "esm", "cjs", "nodejs", "browser", "arraybuffer", "buffer", "dataview", "typedarray", "typescript"
  ],
  "author": "N1ghtTheF0x",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/N1ghtTheF0x/ntf-buffer/issues"
  },
  "homepage": "https://github.com/N1ghtTheF0x/ntf-buffer#readme",
  "devDependencies": {
    "typescript": "latest",
    "tsx": "latest",
    "express": "latest",
    "tsup": "latest"
  }
}
